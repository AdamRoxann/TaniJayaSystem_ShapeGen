<!--        android:layout_marginEnd="44dp"-->
<!--        android:layout_marginRight="44dp"-->
<!--        android:ems="10"-->
<!--        android:hint="Kualitas kopi yg dibeli" />-->

    <RadioGroup
        android:id="@+id/pilihankualitas"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kualitas"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/kualitasA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kualitas A" />

        <RadioButton
            android:id="@+id/kualitasB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kualitas B" />
    </RadioGroup>

    <Button
        android:id="@+id/btnCount"
        android:layout_below="@+id/pilihankualitas"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Count"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="418dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_below="@+id/btnCount"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Back to List"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="418dp" />

</RelativeLayout>